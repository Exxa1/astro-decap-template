---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title?: string;
}

//passing the prop is experimental, need to test what effect it has - goal is to pass the title to BaseLayout for SEO
const { title } = Astro.props;
---

<BaseLayout title={title}>
    <div class="prose prose-website-colors mx-auto max-w-prose py-8 md:py-16">
    <slot />
    </div>
</BaseLayout>