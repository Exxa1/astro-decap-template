---
import Button from "@/components/application_UI/buttons/button.astro"

// Your header should be concise and include a clear CTA, along with an image that showcases your product or someone enjoying it.
---

<div class="container px-6 py-16 mx-auto">
        <div class="items-center lg:flex">
            <div class="w-full lg:w-1/2">
                <div class="lg:max-w-lg">
                    <h1 class="text-4xl lg:text-6xl">Transforming Insecurity into <br> Stunning <span class="text-colorfor-accent-primary ">Portraits</span></h1>
                    
                    <p class="mt-3 text-gray-600 dark:text-gray-400">Are you ready to capture your true self?</p>
                    

						<div class="py-2 mt-6"><Button to="/contact">Book Your Session</Button> </div>
                	</div>
            </div>

            <div class="flex items-center justify-center w-full mt-6 lg:mt-0 lg:w-1/2">
                <img class="w-full h-full lg:max-w-3xl" src="/hero.jpg" alt="Confident person portrait">
            </div>
        </div>
    </div>